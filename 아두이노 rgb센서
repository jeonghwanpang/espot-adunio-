#include <Servo.h> 

Servo myServo; 


int redValue = 0;
int greenValue = 0;
int blueValue = 0;

void setup() {
  myServo.attach(6); // 6번 핀에 서보 모터 연결
  Serial.begin(9600); // 시리얼 통신 시작
  
 
}

void loop() {
  // RGB 센서로부터 RGB 값 읽기 전기차 번호판 rgb값
  redValue = 81;
  greenValue = 203;
  blueValue = 244;
  
  // RGB 값(81, 203, 244)을 감지했을 때 모터 작동
  if (redValue == 81 && greenValue == 203 && blueValue == 244) {

    myServo.write(90);
  } else {
   
    myServo.write(0); // 초기 위치로 회전
  }
  
  delay(1000); 
}
